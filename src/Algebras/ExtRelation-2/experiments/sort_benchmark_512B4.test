#--------------------------------------------------  
# Enable Flags
#--------------------------------------------------  

set "ERA:TraceSort" = TRUE;
#set "SI:PrintCounters" = TRUE;
set "SI:PrintCmdTimes" = TRUE;
set "SI:NoQueryTimers" = TRUE;
set "SI:NoCommandEcho" = TRUE;
#set "SI:RelStatistics" = TRUE;
set "SMI:NoTransactions" = TRUE;

#--------------------------------------------------  
# Create and open database DB_R1G
#--------------------------------------------------  

#setup sort_benchmark_512B StandardAlgebra RelationAlgebra ExtRelation2Algebra

create database db_R1G;
open database db_R1G;

#--------------------------------------------------  
# Sort 900 MB data
#--------------------------------------------------  

#testcase create relation
#yields success
restore R100MB_T512B from '$(SECONDO_BUILD_DIR)/Algebras/ExtRelation-2/experiments/R100MB_T512B';

#testcase create relation
#yields success
let R900MB_T512B = R100MB_T512B feed R100MB_T512B feed head[9] project[Nr] {a} product remove[Nr_a] extend[ran: randint(50000)] sortby2Param[ran asc;512*1024*1024,-1,-1] remove[ran] consume;

#testcase Old sort algorithm - time for run generation
#yields success
query R900MB_T512B feed sort head[1] count;

#testcase Old sort algorithm - total time
#yields success
query R900MB_T512B feed sort count;

#testcase New sort2 algorithm
#yields success
query R900MB_T512B feed sort2 count;

#testcase Old sortby algorithm - time for run generation
#yields success
query R900MB_T512B feed sortby[Flob asc, Nr asc] head[1] count;

#testcase Old sortby algorithm - total time
#yields success
query R900MB_T512B feed sortby[Flob asc, Nr asc] count;

#testcase New sortby2 algorithm
#yields success
query R900MB_T512B feed sortby2[Flob asc, Nr asc] count;

#testcase Delete relation
#yields success
delete R900MB_T512B;

#testcase Delete relation
#yields success
delete R100MB_T512B;

#--------------------------------------------------  
# Close and delete database
#--------------------------------------------------  

#teardown
close database;
delete database db_R1G;
