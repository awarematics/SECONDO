USAGE="createPdfRelation [--oldstyle] ObjectName \n"

if [ $1 = "--oldstyle" ]; then
   END=")())"
   shift
else
   END="))"
fi


HEADER="(OBJECT $1 ()  (rel (tuple ( (Filename text)(Pdf text)(TheText text) ))) ("



if [ "$#" != "1" ]; then
    echo "$USAGE" >&2
    exit
fi

echo "$HEADER"
read F
while [ "$F" ]; do
   echo -en "( <text>$F</text---> "
   echo -en "  <file>$F</file--->"
   echo -en "  <text>"
   pdftotext -raw "$F" - | sed 's#</text--->#</text-_->#g' 
   echo -e  "</text--->)"
   read F
done     

echo "$END"
