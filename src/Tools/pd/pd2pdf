#!/bin/sh 
#
# pd2pdf <file> - Converts a PD file to a PDF file
#
# May 2004, M. Spiekermann

if { ! pd2dvi $1; }; then
   exit 1
fi

dvipdfm -p a4 -o "$1.pdf" "$1.dvi"
